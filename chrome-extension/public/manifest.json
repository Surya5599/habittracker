{
    "manifest_version": 3,
    "name": "HabiCard - Habit Tracker",
    "version": "1.0.0",
    "description": "Track your daily habits and build consistency with HabiCard.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "habicard_favicon.png",
            "48": "habicard_favicon.png",
            "128": "habicard_favicon.png"
        }
    },
    "icons": {
        "16": "habicard_favicon.png",
        "48": "habicard_favicon.png",
        "128": "habicard_favicon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://habicard.com/*",
                "*://*.habicard.com/*",
                "*://localhost/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}